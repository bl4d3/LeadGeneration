.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", containers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_container_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_container_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Container
    .inner
      = form_for @container, :url => container_path(@container), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
