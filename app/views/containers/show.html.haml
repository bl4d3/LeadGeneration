.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", containers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_container_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", container_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.container.name", :default => t("activerecord.labels.name", :default => "Place holder"))
          \:
        = @container.name
      %p
        %b
          = t("activerecord.attributes.container.sub_title", :default => t("activerecord.labels.sub_title", :default => "Sub title"))
          \:
          = @container.sub_title
      %p
        %b
          = t("activerecord.attributes.container.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @container.place_holder
      %p
        %b
          = t("activerecord.attributes.container.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @container.description.html_safe
      %p
        %b
          = t("activerecord.attributes.container.parent_id", :default => t("activerecord.labels.parent_id", :default => "Parent"))
          \:
        = @container.parent_id
      %p
        %b
          = t("activerecord.attributes.container.is_public", :default => t("activerecord.labels.is_public", :default => "Is public"))
          \:
        = @container.is_public
      %p
        %b
          = t("activerecord.attributes.container.order_show", :default => t("activerecord.labels.order_show", :default => "Order show"))
          \:
        = @container.order_show
      %p
        %b
          = t("activerecord.attributes.container.template", :default => t("activerecord.labels.template", :default => "Template"))
          \:
        = @container.template
      %p
        %b
          = t("activerecord.attributes.container.user_id", :default => t("activerecord.labels.user_id", :default => "User"))
          \:
        = @container.user_id
      %p
        %b
          = t("activerecord.attributes.container.mkey", :default => t("activerecord.labels.mkey", :default => "Mkey"))
          \:
        = @container.mkey
      %p
        %b
          = t("activerecord.attributes.container.mdescription", :default => t("activerecord.labels.mdescription", :default => "Mdescription"))
          \:
        = @container.mdescription
      %p
        %b
          = t("activerecord.attributes.container.mtitle", :default => t("activerecord.labels.mtitle", :default => "Mtitle"))
          \:
        = @container.mtitle
      %p
        %b
          = t("activerecord.attributes.container.slug", :default => t("activerecord.labels.slug", :default => "Slug"))
          \:
        = @container.slug
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_container_path(@container), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), container_path(@container), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
