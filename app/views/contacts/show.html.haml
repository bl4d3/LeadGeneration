.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", contacts_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_contact_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", contact_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.contact.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @contact.name
      %p
        %b
          = t("activerecord.attributes.contact.lastname", :default => t("activerecord.labels.lastname", :default => "Lastname"))
          \:
        = @contact.lastname
      %p
        %b
          = t("activerecord.attributes.contact.email", :default => t("activerecord.labels.email", :default => "Email"))
          \:
        = @contact.email
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_contact_path(@contact), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), contact_path(@contact), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
