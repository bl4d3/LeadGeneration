.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", questions_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_question_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", question_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.question.title", :default => t("activerecord.labels.title", :default => "Title"))
          \:
        = @question.title
      %p
        %b
          = t("activerecord.attributes.question.body", :default => t("activerecord.labels.body", :default => "Body"))
          \:
        = @question.body
      %p
        %b
          = t("activerecord.attributes.question.email", :default => t("activerecord.labels.email", :default => "Email"))
          \:
        = @question.email
      %p
        %b
          = t("activerecord.attributes.question.category_id", :default => t("activerecord.labels.category_id", :default => "Category"))
          \:
        = @question.category_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_question_path(@question), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), question_path(@question), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
