.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", services_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_service_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", service_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.service.category_id", :default => t("activerecord.labels.category_id", :default => "Category"))
          \:
        = @service.category_id
      %p
        %b
          = t("activerecord.attributes.service.company_id", :default => t("activerecord.labels.company_id", :default => "Company"))
          \:
        = @service.company_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_service_path(@service), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), service_path(@service), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
