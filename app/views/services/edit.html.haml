.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", services_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_service_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_service_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Service
    .inner
      = form_for @service, :url => service_path(@service), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
