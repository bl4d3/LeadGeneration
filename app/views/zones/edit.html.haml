.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", zones_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_zone_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_zone_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Zone
    .inner
      = form_for @zone, :url => zone_path(@zone), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
