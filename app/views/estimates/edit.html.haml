.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", estimates_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_estimate_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_estimate_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Estimate
    .inner
      = form_for @estimate, :url => estimate_path(@estimate), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
