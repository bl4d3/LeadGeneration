.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", estimates_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_estimate_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Estimates
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.estimate.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @estimates.each do |estimate|
          %tr{:class => cycle("odd", "even")}
            %td
              = estimate.id
            %td
              = link_to estimate.name, estimate_path(estimate)
            %td
              = estimate.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", estimate_path(estimate)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_estimate_path(estimate)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", estimate_path(estimate), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = paginate @estimates
- content_for :sidebar, render(:partial => 'sidebar')
