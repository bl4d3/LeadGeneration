.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", places_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_place_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", place_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.place.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @place.name
      %p
        %b
          = t("activerecord.attributes.place.alias", :default => t("activerecord.labels.alias", :default => "Alias"))
          \:
        = @place.alias
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_place_path(@place), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), place_path(@place), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
