.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", places_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_place_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_place_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Place
    .inner
      = form_for @place, :url => place_path(@place), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
