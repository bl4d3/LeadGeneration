.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", needs_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_need_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", need_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.need.category_id", :default => t("activerecord.labels.category_id", :default => "Category"))
          \:
        = @need.category_id
      %p
        %b
          = t("activerecord.attributes.need.estimate_id", :default => t("activerecord.labels.estimate_id", :default => "Estimate"))
          \:
        = @need.estimate_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_need_path(@need), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), need_path(@need), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
