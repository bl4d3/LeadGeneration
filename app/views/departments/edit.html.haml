.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", departments_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_department_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_department_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Department
    .inner
      = form_for @department, :url => department_path(@department), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
