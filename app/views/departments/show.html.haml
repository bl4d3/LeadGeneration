.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", departments_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_department_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", department_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.department.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @department.name
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_department_path(@department), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), department_path(@department), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
