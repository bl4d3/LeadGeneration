.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", companies_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_company_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_company_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Company
    .inner
      = form_for @company, :url => company_path(@company), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
