.group
  = f.label :title, t("activerecord.attributes.post.title", :default => "Titolo"), :class => :label
  = f.text_field :title, :class => 'text_field'
  %span.description Titolo del tuo post
.group
  = f.label :cover_imege, t("activerecord.attributes.post.cover_imege", :default => "Immagine di copertina"), :class => :label
  = f.text_field :cover_imege, :class => 'text_field'
  %span.description Link dell'immagine di copertina in formato 290x120px
- if current_user.role?(:admin)
  .group
    = f.label :intro, t("activerecord.attributes.post.intro", :default => "Intro"), :class => :label
    = f.text_area :intro, :class => 'text_area mceEditor'
    %span.description Prime righe del tuo post
.group
  = f.label :body, t("activerecord.attributes.post.body", :default => "Post"), :class => :label
  = f.text_area :body, :class => 'text_area mceEditor'
  %span.description Inserisci qui il tuo articolo
- if current_user.role?(:admin)
  .group
    = f.label :mkey, t("activerecord.attributes.post.mkey", :default => "Mkey"), :class => :label
    = f.text_area :mkey, :class => 'text_area'
    %span.description Ex: a simple text
  .group
    = f.label :mdescription, t("activerecord.attributes.post.mdescription", :default => "Mdescription"), :class => :label
    = f.text_area :mdescription, :class => 'text_area'
    %span.description Ex: a simple text
  .group
    = f.label :slug, t("activerecord.attributes.post.slug", :default => "Slug"), :class => :label
    = f.text_field :slug, :class => 'text_field'
    %span.description Ex: a simple text
  .group
    = f.label :argument_id, t("activerecord.attributes.post.argument_id", :default => "Argument"), :class => :label
    = f.collection_select :argument_id, Argument.all, :id, :name, :class => 'text_field'
    %span.description Ex: a simple text
  .group
    = f.label :is_public, t("activerecord.attributes.post.is_public", :default => "Is public"), :class => :label
    = f.check_box :is_public, :class => 'check_box'
    %span.description Ex: a simple text
  .group
    = f.label :is_commentable, t("activerecord.attributes.post.is_commentable", :default => "Is commentable"), :class => :label
    = f.check_box :is_commentable, :class => 'check_box'
    %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), posts_path, :class => "text_button_padding link_button"
