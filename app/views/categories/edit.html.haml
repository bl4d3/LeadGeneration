.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", categories_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_category_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_category_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Category
    .inner
      = form_for @category, :url => category_path(@category), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
