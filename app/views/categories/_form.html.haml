.group
  = f.label :title, t("activerecord.attributes.category.title", :default => "Title"), :class => :label
  = f.text_field :title, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :description, t("activerecord.attributes.category.description", :default => "Description"), :class => :label
  = f.text_area :description, :class => 'text_area mceEditor'
  %span.description Ex: a simple text
.group
  = f.label :parent_id, t("activerecord.attributes.category.parent_id", :default => "Parent"), :class => :label
  = f.collection_select :parent_id, Category.first_level, :id, :title, :include_blank => true
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), categories_path, :class => "text_button_padding link_button"
