.group
  = f.label :name, t("activerecord.attributes.city.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :department_id, t("activerecord.attributes.city.department_id", :default => "Department"), :class => :label
  = f.collection_select :department_id, Department.all, :id, :name
  %span.description Ex: a simple text
.group
  = f.label :zip, t("activerecord.attributes.city.zip", :default => "Zip"), :class => :label
  = f.text_field :zip, :class => 'text_field'
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), cities_path, :class => "text_button_padding link_button"
