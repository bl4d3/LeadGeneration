.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", cities_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_city_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_city_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      City
    .inner
      = form_for @city, :url => city_path(@city), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
