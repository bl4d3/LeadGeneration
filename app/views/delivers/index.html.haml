.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", delivers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_deliver_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Delivers
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.deliver.company_id", :default => t("activerecord.labels.company_id", :default => "Company_id"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @delivers.each do |deliver|
          %tr{:class => cycle("odd", "even")}
            %td
              = deliver.id
            %td
              = link_to deliver.company_id, deliver_path(deliver)
            %td
              = deliver.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", deliver_path(deliver)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_deliver_path(deliver)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", deliver_path(deliver), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
