.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", delivers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_deliver_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_deliver_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Deliver
    .inner
      = form_for @deliver, :url => deliver_path(@deliver), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
