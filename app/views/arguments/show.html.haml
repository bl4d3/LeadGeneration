.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", arguments_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_argument_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", argument_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.argument.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @argument.name
      %p
        %b
          = t("activerecord.attributes.argument.alias", :default => t("activerecord.labels.alias", :default => "Alias"))
          \:
        = @argument.alias
      %p
        %b
          = t("activerecord.attributes.argument.slug", :default => t("activerecord.labels.slug", :default => "Slug"))
          \:
        = @argument.slug
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_argument_path(@argument), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), argument_path(@argument), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
