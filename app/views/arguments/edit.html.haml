.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", arguments_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_argument_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_argument_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Argument
    .inner
      = form_for @argument, :url => argument_path(@argument), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
