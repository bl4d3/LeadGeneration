.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", positions_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_position_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_position_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Position
    .inner
      = form_for @position, :url => position_path(@position), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
