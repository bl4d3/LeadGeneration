.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", positions_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_position_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", position_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.position.continer_id", :default => t("activerecord.labels.continer_id", :default => "Continer"))
          \:
        = @position.container.name
      %p
        %b
          = t("activerecord.attributes.position.place_id", :default => t("activerecord.labels.place_id", :default => "Place"))
          \:
        = @position.place.name
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_position_path(@position), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), position_path(@position), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
