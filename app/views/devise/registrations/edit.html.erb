<div class="block">
	<div class="content">
		<h2 class="title">Modifica profilo</h2>
		<div class="inner">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => :form, :method => :put }) do |f| %>
			  <%= devise_error_messages! %>
				
				<h3>Attenzione! Se vuoi salvare i tuoi dati digita sempre la tua "password attuale"</h3>
				<div class="group">
					<%= f.label :displayName, :class => :label %>
					<%= f.text_field :displayName, :class => "text_field" %>
					<span class="description"></span>
				</div>
				
				<div class="group">
					<%= f.label :email, :class => :label %>
					<%= f.email_field :email, :class => "text_field" %>
					<span class="description"></span>
				</div>
				
				<div class="group">
					<%= f.label :password, :class => :label %>
					<%= f.password_field :password, :class => "text_field" %>
					<span class="description"></span>
				</div>
				
				<div class="group">
					<%= f.label :password_confirmation, :class => :label %>
					<%= f.password_field :password_confirmation, :class => "text_field" %>
					<span class="description"></span>
				</div>

				<div class="group">
					<%= f.label :current_password, :class => :label %>
					<%= f.password_field :current_password, :class => "text_field" %>
					<span class="description">In ogni caso inserisci la tua attuale password per salvare le modifiche </span>
				</div>

				<div class="group">
					<%= f.label :info, :class => :label %>
					<%= f.text_area :info, :class => "text_area" %>
					<span class="description">Informazioni sul tuo profilo, verranno pubblicate alla fine dei tuoi articolinel blog e come nota quando rispondi ad una domanda</span>
				</div>
				<div class="group navform wat-cf">
					<button class="button" type="submit">
					<img src="/images/web-app-theme/icons/tick.png?1307372008" alt="Salva">
					Salva
					</button>				
				</div>
			<% end %>

		</div>

	</div>
</div>